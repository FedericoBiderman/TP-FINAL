@{
    ViewData["Title"] = "OlvideContraseña";
}
    <div class="background">

    <div class="container">
        <h1>Olvidé Mi Contraseña</h1>
        <form id="formolvidepassword" method="post" action='@Url.Action("CheckOlvideContraseña", "Account")'>

            <label for="email">Correo Electrónico:</label>
            <input type="email" id="email" name="email" placeholder="Correo Electronico" required>
            <button type="submit">Enviar email</button>
        </form>
        <p><a href='@Url.Action("Login", "Account")'>Volver al Inicio de Sesión</a></p>
    </div>
</div>




